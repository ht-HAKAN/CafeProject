<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="application.AdminPanelController">
    
    <!-- Form Alanı - Personel Ekleme -->
    <VBox layoutX="200.0" layoutY="50.0" spacing="20" alignment="CENTER">
        <!-- Başlık -->
        <Label text="Personel Bilgileri" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        
        <!-- Ad Soyad -->
        <HBox spacing="10" alignment="CENTER">
            <Label text="Ad Soyad:" />
            <TextField fx:id="txtAdSoyad" promptText="Ad Soyad Giriniz" prefWidth="200.0"/>
        </HBox>
        
        <!-- Telefon -->
        <HBox spacing="10" alignment="CENTER">
            <Label text="Telefon Numarası:" />
            <TextField fx:id="txtTelefon" promptText="Telefon Giriniz" prefWidth="200.0"/>
        </HBox>
        
        <!-- Rol -->
        <HBox spacing="10" alignment="CENTER">
            <Label text="Rol:" />
            <TextField fx:id="txtRol" promptText="Rol Giriniz" prefWidth="200.0"/>
        </HBox>
        
        <!-- Personel Kaydet Butonu -->
        <Button fx:id="btnSavePersonel" text="Kaydet" onAction="#savePersonel" prefWidth="200.0" />
    </VBox>
    
    <!-- Personel Listesi -->
    <VBox layoutX="200.0" layoutY="250.0" spacing="10">
        <!-- Personel Listeleme -->
        <ListView fx:id="personelListView" prefHeight="200.0" prefWidth="400.0"/>
        
        <!-- Butonlar -->
        <HBox spacing="10" alignment="CENTER">
            <!-- Personel Ekle -->
            <Button fx:id="btnAddPersonel" text="Personel Ekle" onAction="#addPersonel" prefWidth="200.0"/>
            <!-- Personel Sil -->
            <Button fx:id="btnDeletePersonel" text="Personel Sil" onAction="#deletePersonel" prefWidth="200.0"/>
        </HBox>
    </VBox>
    
</AnchorPane>

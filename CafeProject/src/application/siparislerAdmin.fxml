<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>

<AnchorPane prefHeight="700.0" prefWidth="1200.0" style="-fx-background-color: #1C1C1C;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.siparislerAdminController">
   <children>
      <!-- Üst Panel -->
      <Pane layoutX="0.0" layoutY="0.0" prefHeight="80.0" prefWidth="1200.0" style="-fx-background-color: #1C1C1C;">
         <children>
            <Text fill="WHITE" layoutX="26.0" layoutY="63.0" text="Sipariş Yönetim Sistemi" wrappingWidth="400.0">
               <font>
                  <Font name="System Bold" size="23.0" />
               </font>
            </Text>
         </children>
      </Pane>

      <!-- Sol Panel - Sipariş Yönetimi -->
      <VBox layoutX="20.0" layoutY="100.0" prefHeight="580.0" prefWidth="340.0" spacing="18" style="-fx-background-color: #2C2C2C; -fx-padding: 20; -fx-background-radius: 10;">
         <children>
            <Text fill="WHITE" text="Sipariş Yönetimi">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Text>
            <Text fx:id="masaBilgiText" text="Masa seçiniz..." fill="WHITE" wrappingWidth="300.0" style="-fx-font-size: 15px; -fx-font-weight: bold;" />
            <HBox spacing="10">
               <children>
                  <ComboBox fx:id="durumComboBox" prefWidth="120.0" promptText="Durum seçiniz" style="-fx-background-color: #3C3C3C; -fx-text-fill: white;" />
                  <Button fx:id="durumGuncelleButton" mnemonicParsing="false" prefWidth="120.0" style="-fx-background-color: #FFD700; -fx-text-fill: #232323; -fx-font-weight: bold; -fx-background-radius: 8;" text="Durumu Güncelle" />
               </children>
            </HBox>
            <Separator />
            <Text fill="WHITE" text="Siparişler">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Text>
            <TableView fx:id="siparisTable" prefHeight="120.0" style="-fx-background-color: #232323; -fx-text-fill: white; -fx-background-radius: 10;">
               <columns>
                  <TableColumn fx:id="urunCol" text="Ürün" prefWidth="110.0" />
                  <TableColumn fx:id="miktarCol" text="Adet" prefWidth="60.0" />
                  <TableColumn fx:id="tutarCol" text="Tutar" prefWidth="80.0" />
                  <TableColumn fx:id="silCol" text="Sil" prefWidth="50.0" />
               </columns>
            </TableView>
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
               <Text text="Toplam:" fill="WHITE" style="-fx-font-size: 15px; -fx-font-weight: bold;" />
               <Text fx:id="toplamTutarText" text="0 TL" style="-fx-font-size: 16px; -fx-fill: #FFD700; -fx-font-weight: bold;" />
            </HBox>
            <Separator />
            <Text fill="WHITE" text="Sipariş Ekle">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Text>
            <ComboBox fx:id="urunComboBox" promptText="Ürün Seç" prefWidth="220.0" style="-fx-background-color: #3C3C3C; -fx-text-fill: white;" />
            <TextField fx:id="miktarField" promptText="Adet" prefWidth="220.0" style="-fx-background-color: #3C3C3C; -fx-text-fill: white;" />
            <Button fx:id="siparisEkleButton" mnemonicParsing="false" prefWidth="150.0" style="-fx-background-color: #FFD700; -fx-text-fill: #232323; -fx-font-weight: bold; -fx-background-radius: 8;" text="Sipariş Ekle" />
            <HBox spacing="10">
               <children>
                  <Button fx:id="hesapKesButton" mnemonicParsing="false" prefWidth="120.0" style="-fx-background-color: #FFD700; -fx-text-fill: #232323; -fx-font-weight: bold; -fx-background-radius: 8;" text="Hesap Kes" />
                  <Button fx:id="temizleButton" mnemonicParsing="false" prefWidth="90.0" style="-fx-background-color: #404040; -fx-text-fill: white; -fx-background-radius: 8;" text="Temizle" />
               </children>
            </HBox>
         </children>
      </VBox>

      <!-- Sağ Panel - Masa Grid ve Renk Kılavuzu -->
      <Pane layoutX="380.0" layoutY="100.0" prefHeight="509.0" prefWidth="780.0" style="-fx-background-color: #2C2C2C; -fx-background-radius: 10;">
         <children>
            <Text fill="WHITE" layoutX="20.0" layoutY="40.0" text="Masalar">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Text>
            <GridPane fx:id="masalarGrid" hgap="10" layoutX="20.0" layoutY="60.0" prefHeight="350.0" prefWidth="750.0" vgap="10" />
            <!-- Renk Kılavuzu -->
            <VBox layoutX="20.0" layoutY="420.0" spacing="10">
               <children>
                  <Text fill="WHITE" text="Renk Kılavuzu:">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Text>
                  <HBox spacing="20">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="5">
                           <children>
                              <Rectangle arcHeight="5" arcWidth="5" fill="GREEN" height="20" width="20" />
                              <Text fill="WHITE" text="Boş" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5">
                           <children>
                              <Rectangle arcHeight="5" arcWidth="5" fill="RED" height="20" width="20" />
                              <Text fill="WHITE" text="Dolu" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5">
                           <children>
                              <Rectangle arcHeight="5" arcWidth="5" fill="YELLOW" height="20" width="20" />
                              <Text fill="WHITE" text="Kirli" />
                           </children>
                        </HBox>
                     </children>
                  </HBox>
                  <Text fill="WHITE" text="* Masa üzerine tıklayarak düzenleme yapabilirsiniz." />
               </children>
            </VBox>
         </children>
      </Pane>
   </children>
</AnchorPane> 
        <HBox spacing="16.0" alignment="CENTER">
            <Button fx:id="ekleButton" text="Sipariş Ekle" style="-fx-background-color: #FFD700; -fx-text-fill: #232323; -fx-font-weight: bold; -fx-font-size: 15px; -fx-background-radius: 8;" />
            <Button fx:id="iptalButton" text="İptal" style="-fx-background-color: #404040; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 8;" />
